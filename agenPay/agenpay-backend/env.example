# AgenPay Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/agenpay"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Privy Wallet Integration - Required for wallet operations
# Get these from https://console.privy.io/
PRIVY_APP_ID="your_privy_app_id"
PRIVY_APP_SECRET="your_privy_app_secret"

# Notion API Integration - Required for workspace automation
# Get from https://www.notion.so/my-integrations
NOTION_CLIENT_ID="your_notion_client_id"
NOTION_CLIENT_SECRET="your_notion_client_secret"
NOTION_REDIRECT_URI="http://localhost:3000/auth/notion-callback"

# Privy Wallet Integration
PRIVY_APP_ID="your_privy_app_id"
PRIVY_APP_SECRET="your_privy_app_secret"

# OKX DEX Integration
OKX_API_KEY="your_okx_api_key"
OKX_SECRET_KEY="your_okx_secret_key"
OKX_PASSPHRASE="your_okx_passphrase"

# X402Pay Integration
X402_API_KEY="your_x402_api_key"
X402_WEBHOOK_SECRET="your_x402_webhook_secret"
X402_FACILITATOR_URL="https://x402.org/facilitator"

# LangChain/OpenAI - Required for AI agent functionality
OPENAI_API_KEY="your-openai-api-key"

# Email Service (Optional - for sending payment notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Server Configuration
PORT="3001"
NODE_ENV="development"

# Sei Network Configuration
DEFAULT_NETWORK="sei-testnet"
DEFAULT_CURRENCY="SEI"

# Security
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"  # requests per window

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000" 